[global]
    # Font and transparency
    font = {{font}} 13
[frame]
    # Frame border
    width = 2
    color = #000000  # black

[urgency_low]
    background = #00000088  # black with transparency
    foreground = #a6e3a1    # green
    timeout = 10
    frame_color = #000000
    separator_color = #101010

[urgency_normal]
    background = #00000088
    foreground = #ffffff    # white
    timeout = 10
    frame_color = #a6e3a1   # green border
    separator_color = #101010

[urgency_critical]
    background = #00000088
    foreground = #C68689    # red
    timeout = 0             # sticky until dismissed
    frame_color = #C68689
    separator_color = #C68689
