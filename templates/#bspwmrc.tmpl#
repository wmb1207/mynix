#!/bin/sh
#xrandr --output eDP-1 --scale-from 2016x1260
if [ "$(hostname)" = 'asahibook' ]; then
    xrandr --output eDP-1 --dpi 144
fi;

# Set up monitors with specific workspaces
if xrandr --query | grep "DP-1" | grep -v "eDP-1" | grep -q " connected "; then
    bspc monitor DP-1 -d Hollow Thorne Grimoire
    bspc monitor eDP-1 -d Abyss Nocturne
else
    bspc monitor -d Hollow Thorne Grimoire Abyss Nocturne
fi

bspc config border_width 5
bspc config focused_border_color {{background}}
bspc config normal_border_color {{normal-background}}
bspc config window_gap 25
bspc config split_ratio 0.55
bspc config borderless_monocle true
bspc config gapless_monocle true
bspc rule -a brave desktop=^3
bspc rule -a emacs desktop=^1
bspc rule -a ghostty desktop=^2
picom --config ~/.config/picom/picom.conf &
dunst --config ~/.config/dunst/dunstrc &
feh --bg-scale ~/.config/wallpapers/wallpaper-8.jpg &
bash ~/.bin/battery.sh --daemon &
polybar -c ~/.config/polybar/config.ini top &
sxhkd &
