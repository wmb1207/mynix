#!/bin/sh

bspc monitor -d Hollow Thorne Grimoire Abyss Nocturne

bspc config border_width 5
bspc config focused_border_color {{background}}
bspc config normal_border_color {{normal-background}}
bspc config window_gap 20
bspc config split_ratio 0.65
bspc config borderless_monocle true
bspc config gapless_monocle true
bspc rule -a Firefox desktop=^3

killall -q polybar

while pgrep -u $UID -x polybar >/dev/null; do sleep 1; done

# Launch the bar
polybar top &
picom --config ~/.config/picom/picom.conf &
xsetroot -solid {{background}}

feh --bg-scale ~/.config/wallpapers/gradient.png

