    # launch terminal
    super + Return
          ghostty

    # reload sxhkd
    super + Escape
        pkill -USR1 -x sxhkd

    super + alt + c
        emacsclient -r

    # bspwm window movement
    super + h
        bspc node -f west
    super + j
        bspc node -f south
    super + k
        bspc node -f north
    super + l
        bspc node -f east

    # bspwm window resizing
    super + alt + h
        bspc node -z left -20 0
    super + alt + l
        bspc node -z right 20 0