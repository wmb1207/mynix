# launch terminal
super + Return
  ghostty

super + Escape
  pkill -USR1 -x sxhkd

super + alt + e
      emacs

super + space
      dmenu_run -fn "JetBrains Mono" -nb "#f0f0f0" -nf "#0e1014" -sb "#0e1014" -sf "#f0f0f0"

super + c
      emacsclient -c 

super + q
      bspc node -c

super + b
   bspc node -f west
super + n
   bspc node -f south
super + p
   bspc node -f north
super + f
   bspc node -f east

# bspwm window resizing
super + alt + h
    bspc node -z left -20 0
super + alt + l
    bspc node -z right 20 0

# Switch to named desktop (adjust according to your names)
super + 1
    bspc desktop -f "Hollow"

super + 2
    bspc desktop -f "Thorne"

super + 3
    bspc desktop -f "Grimoire"

super + 4
    bspc desktop -f "Abyss"

super + 5
    bspc desktop -f "Nocturne"

super + shift + 1
    bspc node -d "Hollow"

super + shift + 2
    bspc node -d "Thorne"

super + shift + 3
    bspc node -d "Grimoire"

super + shift + 4
    bspc node -d "Abyss"

super + shift + 5
    bspc node -d "Nocturne"

super + alt + b
      bash ~/.bin/battery.sh