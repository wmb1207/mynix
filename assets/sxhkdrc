# launch terminal
super + Return
  ghostty

super + Escape
  pkill -USR1 -x sxhkd

super + alt + e
      emacs

super + space
      dmenu_run -fn "JetBrains Mono" -nb "#c8c093" -nf "#0e1014" -sb "#0e1014" -sf "#c8c093"

super + c
      emacsclient -c 

super + q
      bspc node -c

super + b
   bspc node -f west
super + n
   bspc node -f south
super + p
   bspc node -f north
super + f
   bspc node -f east

super + Tab
    bspc node -f next.local

# bspwm window resizing
super + alt + h
    bspc node -z left -25 0
super + alt + l
    bspc node -z right 25 0

# Switch to named desktop (adjust according to your names)
super + 1
    bspc desktop -f "Hollow"

super + 2
    bspc desktop -f "Thorne"

super + 3
    bspc desktop -f "Grimoire"

super + 4
    bspc desktop -f "Abyss"

super + 5
    bspc desktop -f "Nocturne"

super + shift + 1
    bspc node -d "Hollow"

super + shift + 2
    bspc node -d "Thorne"

super + shift + 3
    bspc node -d "Grimoire"

super + shift + 4
    bspc node -d "Abyss"

super + shift + 5
    bspc node -d "Nocturne"

super + alt + b
      bash ~/.bin/battery.sh

super + shift + space
    bspc node -t ~floating; bspc node -v 0 0; bspc node --flag center

XF86AudioRaiseVolume
  pamixer --increase 5

# Volume down
XF86AudioLowerVolume
  pamixer --decrease 5

# Mute toggle
XF86AudioMute
  pamixer --toggle-mute
